#!/usr/bin/env bash
# Script to kill the "7-highlander" process using SIGKILL (signal 9)

# Find the PID of the 7-highlander process
PID=$(pgrep -f "7-highlander")

# Check if the process exists
if [[ -z "$PID" ]]; then
    echo "❌ Process '7-highlander' not found."
    exit 1
fi

# Kill the process with SIGKILL
kill -9 "$PID"

# Confirm the kill
if [[ $? -eq 0 ]]; then
    echo "✅ Process '7-highlander' (PID: $PID) has been killed with SIGKILL."
else
    echo "⚠️ Failed to kill '7-highlander'. You might need sudo privileges."
    exit 1
fi
